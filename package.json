{
  "name": "vue3-pnpm-monorepo-demo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "components",
    "utils"
  ],
  "scripts": {
    "project1": "pnpm run -C packages/project1 dev",
    "project2": "pnpm run -C packages/project2 dev",
    "project3": "pnpm run -C packages/project3 dev",
    "build:project1": "pnpm run -C packages/project1 build",
    "build:project2": "pnpm run -C packages/project2 build",
    "build:project3": "pnpm run -C packages/project2 build"
  },
  "dependencies": {
    "@co2color/components": "workspace:^1.0.0",
    "@co2color/utils": "workspace:^1.0.0",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@types/node": "^16.11.36",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/tsconfig": "^0.1.3",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.7.2",
    "vite": "^2.9.9",
    "vue-tsc": "^0.35.2"
  },
  "license": "ISC"
}
